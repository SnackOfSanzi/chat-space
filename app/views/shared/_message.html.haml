.messages{"data-id": message.id}
  .messeges__body__list__1
    .messages__name
      = message.user.name
    .messages__time
      = message.created_at.to_s(:datetime)
    .messages__text
      - if message.body.present?
        %p.message__content
          = message.body
      = image_tag message.image.url, class: 'message__image' if message.image.present?
